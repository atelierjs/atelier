{
  "extends": "../../tsconfig.json",
  "compilerOptions": {
    "composite": true,
    "declaration": true,
    "outDir": "dist/types",
    "rootDir": "src",
    "baseUrl": "./src",
    "paths": {
      "@atelierjs/core": ["../core"],
      "@hooks": ["hooks"],
      "@components": ["components"]
    }
  },
  "include": ["src/**/*.ts", "src/**/*.tsx"],
  "exclude": ["node_modules", "dist"],
  "references": [{ "path": "../core" }]
}
