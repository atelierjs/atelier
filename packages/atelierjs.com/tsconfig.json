{
  "extends": "../../tsconfig.json",
  "compilerOptions": {
    "noEmit": true,
    "rootDir": "src",
    "baseUrl": "./src",
    "paths": {
      "@atelierjs/react": ["../react"],
      "@components": ["components"],
      "@context": ["context"],
      "@hooks": ["hooks"],
      "@styles": ["styles"],
      "@utils": ["utils"],
      "@views": ["views"]
    }
  },
  "include": ["src/**/*.ts", "src/**/*.tsx"],
  "exclude": ["node_modules", "dist"],
  "references": [{ "path": "../react" }]
}
